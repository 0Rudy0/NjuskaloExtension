{
    "manifest_version": 2,

    "name": "Njuskalo enhancer",
    "description": "Enhancing Njuskalo experience, price tracking.",
    "version": "1.1.2",
    "icons": {
        "16": "icons/njuskalo_16.png",
        "48": "icons/njuskalo_48.png",
        "128": "icons/njuskalo_128.png"
    },
    "browser_action": {
        "default_icon": "icons/njuskalo_thumb.png",
        "default_popup": "html/extensionPopup.html"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://www.njuskalo.hr/sportski-motori*",
                "http://www.njuskalo.hr/cestovni-motori*",
                "http://www.njuskalo.hr/auti*",
                "http://www.njuskalo.hr/karambolirani-auti*",
                "http://www.njuskalo.hr/prodaja-kuca*",
                "http://www.njuskalo.hr/prodaja-stanova*",
                "http://www.njuskalo.hr/nekretnine*",
                "http://www.njuskalo.hr/novogradnja*",
                "http://www.njuskalo.hr/?ctl=browse_ads&sort=new&categoryId=9580*",
                "http://www.njuskalo.hr/?ctl=browse_ads&sort=new&categoryId=9579*"
            ],
            "css": [
                "css/morris.css",
                "css/prettify.min.css",
                "css/imageSlider.css",
                "css/Njuskalo.css",
                "css/mergeModal.css"
            ],
            "js": [
                "js/jquery.min.js",
                "js/raphael-min.js",
                "js/morris.min.js",
                "js/prettify.min.js",
                "js/dbase.js",
                "js/jssor.slider.min.js",
                "js/imageSliderInit.js",
                "js/Njuskalo.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "*.json",
        "*.svg",
        "*.jpg",
        "*.png",
        "*.html",
        "*.woff2"
    ],

    "background": {
        "scripts": [ "js/background.js" ],
        "persistent": false
    }
}